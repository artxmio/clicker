<Window x:Class="clicker.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clicker"
        mc:Ignorable="d"
        Title="Login" Height="375" Width="765"
        FontSize="20"
        WindowStartupLocation="CenterScreen" 
        FontFamily="Yu Gothic UI Semibold" 
        Background="#FF151515" Foreground="Lime" WindowStyle="None"
        ResizeMode="NoResize">
    <Grid>
        <Grid.Margin>0</Grid.Margin>

        <!--Структура-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Элементы-->
        <TextBlock Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Margin="25,5,36,5">
            <TextBlock.Text>Authorization</TextBlock.Text>
            <TextBlock.FontSize>45</TextBlock.FontSize>
        </TextBlock>
        <!--Логин-->
        <TextBlock>
            <Grid.Column>1</Grid.Column>
            <Grid.Row>2</Grid.Row>
            <TextBlock.FontSize>15</TextBlock.FontSize>
            <TextBlock.Margin>10,22,94,58</TextBlock.Margin>
            <TextBlock.Text>your login</TextBlock.Text>
        </TextBlock>
        <TextBox x:Name="log_box" Grid.Column="1">
            <Grid.Row>2</Grid.Row>
            <TextBox.FontSize>17</TextBox.FontSize>
            <TextBox.Margin>10,47,10,23</TextBox.Margin>
            <TextBox.Padding>2</TextBox.Padding>
            <TextBox.MaxLength>16</TextBox.MaxLength>
        </TextBox>
        <!--Пароль-->
        <TextBlock>
            <Grid.Column>1</Grid.Column>
            <Grid.Row>3</Grid.Row>
            <TextBlock.FontSize>15</TextBlock.FontSize>
            <TextBlock.Margin>17,18,109,58</TextBlock.Margin>
            <TextBlock.Text>your password</TextBlock.Text>
        </TextBlock>

        <PasswordBox x:Name="pass_box">
            <Grid.Column>1</Grid.Column>
            <Grid.Row>3</Grid.Row>
            <PasswordBox.FontSize>17</PasswordBox.FontSize>
            <PasswordBox.Margin>10,47,10,23</PasswordBox.Margin>
            <PasswordBox.MaxLength>10</PasswordBox.MaxLength>
            <PasswordBox.Padding>2</PasswordBox.Padding>
        </PasswordBox>
        <!--Кнопка авторизации-->
        <Button IsDefault="True" x:Name="sing_in" Click="sing_in_Click" Content="Sing in" Grid.ColumnSpan="2" >
            <Grid.Column>1</Grid.Column>
            <Button.Margin>10,17,21,17</Button.Margin>

            <Grid.Row>4</Grid.Row>
        </Button>

        <Label x:Name="warning" Grid.Column="1">
            <Label.FontSize>13</Label.FontSize>
            <Label.Foreground>Red</Label.Foreground>
            <Label.Margin>10,10,10,58</Label.Margin>
            <Grid.Row>3</Grid.Row>
        </Label>

    </Grid>

</Window>
